<Window x:Name="frmLoadedCampaign" x:Class="DmScreen.forms.SelectedCampaignScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DmScreen.forms"
        mc:Ignorable="d"
        Title="&lt;PUT TITLE HERE&gt;" Height="450" Width="800" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <Label x:Name="lblSystem" Content="System" HorizontalAlignment="Left" VerticalAlignment="Top" Height="30" Width="130" Margin="454,0,0,0" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Background="Gray"/>
        <Label x:Name="lblTools" HorizontalAlignment="Left" VerticalAlignment="Top" Width="130" Height="30" Content="Tools" Background="Gray" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="324,0,0,0"/>
        <Label x:Name="lblModes" Content="Modes" HorizontalAlignment="Left" VerticalAlignment="Top" Height="30" Width="130" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Background="Gray" Margin="194,0,0,0"/>
        <ComboBox x:Name="cmbModes" HorizontalAlignment="Left" VerticalAlignment="Top" Width="130" Height="30" Text="Modes" Opacity="0" MouseEnter="Combo_MouseEnter" MouseLeave="Combo_MouseExit" Margin="194,0,0,0">
            <Button x:Name="btnPlayMode" Content="Play Mode" HorizontalAlignment="Left" VerticalAlignment="Top" Width="120" Height="27" Click="btnPlayMode_Click" />
            <Button x:Name="btnEditorMode" Content="Editor Mode" HorizontalAlignment="Left" VerticalAlignment="Top" Width="120" Height="27" Click="btnEditorMode_Click"/>
        </ComboBox>
        <ComboBox x:Name="cmbTools" HorizontalAlignment="Left" VerticalAlignment="Top" Height="30" Width="125" Margin="324,0,0,0" Opacity="0" Text="Tools" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" MouseEnter="Combo_MouseEnter" MouseLeave="Combo_MouseExit">
            <Button x:Name="btnBattleMode" Content="Commence Battle" HorizontalAlignment="Left" VerticalAlignment="Top" Width="120" Height="27"/>
            <Button x:Name="btnMusicPlayer" Content="Music Player" HorizontalAlignment="Left" VerticalAlignment="Top" Width="120" Height="27" Click="btnMusicPlayer_Click"/>
            <Button x:Name="btnDice" Content="Dice" HorizontalAlignment="Left" VerticalAlignment="Top" Width="120" Height="27" Click="btnDice_Click"/>
        </ComboBox>
        <ComboBox x:Name="cmbSystem" HorizontalAlignment="Left" Margin="454,0,0,0" VerticalAlignment="Top" Width="130" Height="30" Text="System" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" MouseEnter="Combo_MouseEnter" MouseLeave="Combo_MouseExit" Opacity="0">
            <Button x:Name="btnSettings" Content="Settings" HorizontalAlignment="Left" VerticalAlignment="Top" Width="120" Height="27"/>
            <Button x:Name="btnSaveProgress" Content="Save" HorizontalAlignment="Left" VerticalAlignment="Top" Width="120" Height="27"/>
            <Button x:Name="btnExit" Content="Exit" HorizontalAlignment="Left" VerticalAlignment="Top" Width="120" Height="27" Click="btnExit_Click"/>
        </ComboBox>
    </Grid>
</Window>
